{% extends 'base.html.twig' %}

{% block body %}
    <div class="page">
        <h1 class="header__logo"><a href="" class="ir">Radio Wizi</a></h1>
        <div class="content-wrapper content--centered">
            <div class="player">
                {% for video in playlist %}
                    <div class="player__media">
                        {% if loop.index == 1 %}
                            <div class="player__video">
                                {{ video.iframe|raw }}
                            </div>
                        {% else %}
                            <div class="player__image"><img src="{{ video.image }}"/></div>
                        {% endif %}
                    </div>
                    <div class="player__detail">
                        <h3 class="player__label">Now playing</h3>

                        <h2 class="player__title">{{ video.title }}</h2>

                        <div class="player__controls">
                            <div class="player__time-indicator">

                            </div>
                            <div>
                                1:24
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="playlist__wrapper">
                <h3 class="playlist__title">Coming up</h3>
                <ol class="playlist">
                    <li class="playlist__song"><span class="song__title">Carly Rae Jepsen - I really like you</span><span class="song__duration">3:14</span></li>
                    <li class="playlist__song"><span class="song__title">Baltimora - Tarzan Boy</span><span class="song__duration">3:14</span></li>
                    <li class="playlist__song"><span class="song__title">ERA - Ameno</span><span class="song__duration">3:14</span></li>
                </ol>
            </div>
        </div>
    </div>
{% endblock %}
